
.container {
  /*margin-top:240rpx;*/
}

.scroll{
  margin-top: 120rpx;
  height: calc(100vh - 400rpx - 120rpx);
  overflow: hidden;
}
.records {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 150rpx;
}

.records .total {
  position: relative;
  font-size: 24rpx;
  height: 100rpx;
  width: 4rpx;
  background-color: rgb(246, 246, 246);
  color: rgb(185, 185, 185);
}

.records .total::after {
  content: "";
  height: 16rpx;
  width: 16rpx;
  background-color: rgb(214, 214, 214);
  position: absolute;
  right: -6rpx;
  bottom: 20%;
  border-radius: 50%;
}

.records .total .date {
  position: absolute;
  right: 100%;
  bottom: 10%;
  margin-right: 20rpx;
  white-space: nowrap;
}

.records .total .price {
  position: absolute;
  left: 100%;
  bottom: 10%;
  margin-left: 50rpx;
}

.list .turnover:first-child .mt {
  margin-top: 60rpx !important;
}

.list .turnover:first-child .mt::after {
  height: 60rpx !important;
}

.statistics {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: flex-end;
  z-index: 1;
  background-color: white;
  padding: 20rpx;
}
