.calender {
  position: relative;
}

.calender .banner {
  width: 100%;
  height: 400rpx;
  vertical-align: middle;
}

.calender .icon {
  width: 240rpx !important;
}

.calender .add-icon {
  border-radius: 50% !important;
  background-color: white;
  position: absolute;
  left: 50%;
  bottom: -120rpx;
  transform: translateX(-50%);
}
