.calender {
  position: relative;
}

.calender .banner {
  width: 100%;
  height: 400rpx;
  vertical-align: middle;
}

.calender .icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  border: 2rpx solid #777;
}

.bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx;
  color: rgb(185, 185, 185);
}

.bar .right {
  text-align: right;
}
