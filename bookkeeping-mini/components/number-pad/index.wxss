.container {

}

.container .edit-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 100rpx;
  background-color: rgb(240, 240, 240);
}

.container .edit-bar .time {
  color: rgb(166, 166, 166);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.container .edit-bar .time .calender {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.container .edit-bar .time .year {
  font-size: 24rpx;
}

.container .edit-bar .time .date {
  font-size: 28rpx;
}

.container .edit-bar .time .date.highlight,
.container .edit-bar .time .year.highlight {
  color: rgb(209, 171, 122);
}

.container .edit-bar .edit {
  vertical-align: middle;
  width: 40rpx;
  padding: 16rpx 0;
}

.container .buttons {
  background-color: rgb(221, 226, 229);
}

.container .buttons {
  display: flex;
}

.container .buttons .numbers {
  display: flex;
  flex-wrap: wrap;
  flex-grow: 1;
}

.container .buttons .options {
  width: 25%;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}

.container .buttons .button {
  box-sizing: border-box;
  font-size: 60rpx;
  width: 33.33%;
  height: 120rpx;
  color: rgb(127, 132, 135);
  background-color: transparent;
  border-bottom: 2rpx solid rgb(211, 216, 219);
  border-right: 2rpx solid rgb(211, 216, 219);
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .buttons .button.clear,
.container .buttons .button.ok {
  height: 240rpx;
  border-right: none;
  width: 100%;
}

.container .buttons .button.zero {
  width: 66.66%;
}

.container .buttons .button.ok,
.container .buttons .button.zero,
.container .buttons .button.dot {
  border-bottom: none;
}
